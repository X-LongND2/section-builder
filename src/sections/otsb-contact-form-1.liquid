{% liquid
  if settings.heading_base_size != blank
    assign heading_size = section.settings.heading_size | times: settings.heading_base_size | times: 0.000225
  else
    assign heading_size = section.settings.heading_size | times: 100 | times: 0.000225
  endif
  assign formID = 'ContactForm-' | append: section.id
  assign count = 0
  for block in section.blocks
    if block.type == 'name' or block.type == 'email'
      assign count = count | plus: 1
    endif
  endfor

  assign class_form = 'w-full'
  assign check_content = false
  if section.settings.show_content == 'info'
    assign class_infomation = 'w-full lg:w-[48%]'
    assign class_form = 'w-full lg:w-[48%]'
    assign check_content = 'info'
  elsif section.settings.show_content == 'image' and section.settings.image != blank
    assign class_infomation = 'w-full lg:w-1/2'
    assign class_form = 'w-full lg:w-1/2'
    assign check_content = 'image'
  elsif section.settings.show_content == 'both'
    if section.settings.image != blank
      assign check_content = 'image'
      assign class_infomation = 'w-full'
      assign class_form = "w-full lg:w-1/2"
    else
      assign check_content = 'info'
      assign class_form = "w-full lg:w-[48%]"
      assign class_infomation = "w-full lg:w-[48%]"
    endif
  endif

  if section.settings.form_alignment == 'left'
    assign class_infomation = class_infomation | append: ' otsb-align-right'
    assign class_form = class_form | append: ' otsb-form-align-left'
  else
    assign class_infomation = class_infomation | append: ' order-1 otsb-align-left'
    assign class_form = class_form | append: ' order-2 otsb-form-align-right'
  endif
  if section.settings.show_content == 'both'
    if settings.page_width != blank
      assign form_page_width = settings.page_width | divided_by: 2
    else
      assign form_page_width = 1400 | divided_by: 2
    endif
    assign class_infomation = class_infomation | remove: ' order-1'
    assign class_form_both = 'contact-form'
    if section.settings.image != blank
      assign class_form_both = class_form_both | append: ' max-w-[' | append: form_page_width | append: 'px]'
    endif
  endif

  if settings.lang_direction contains request.locale.iso_code
    assign is_rtl = true
  else
    assign is_rtl = false
  endif
%}
{%- style -%}
  {% if section.settings.image != blank %}
    .contact-form-{{ section.id }} {
       {% if section.settings.background_color_light.alpha == 0.0 %}
        background: transparent;
      {% else %}
        background: {{ section.settings.background_color_light }};
      {% endif %}
    }
    .dark .contact-form-{{ section.id }}{
      {% if section.settings.background_color_dark.alpha == 0.0 %}
        background: transparent;
      {% else %}
        background: {{ section.settings.background_color_dark }};
      {% endif %}
    }
    {% else %}
      #shopify-section-{{ section.id }}{
        {% if section.settings.background_color_light.alpha == 0.0 %}
          background: transparent;
          {% if settings.colors_background.red != blank and settings.colors_background.green != blank and settings.colors_background.blue != blank %}
            --background-color: {{ settings.colors_background.red }}, {{ settings.colors_background.green }}, {{ settings.colors_background.blue }};
          {% else %}
            --background-color: 255, 255, 255;
          {% endif %}
        {% else %}
          background: {{ section.settings.background_color_light }};
          --background-color: {{ section.settings.background_color_light.red }}, {{ section.settings.background_color_light.green }}, {{ section.settings.background_color_light.blue }};
        {% endif %}
      }
      .dark #shopify-section-{{ section.id }}{
        {% if section.settings.background_color_dark.alpha == 0.0 %}
          background: transparent;
          {% if settings.colors_dark_background.red != blank and settings.colors_dark_background.green != blank and settings.colors_dark_background.blue != blank %}
            --background-color: {{ settings.colors_dark_background.red }}, {{ settings.colors_dark_background.green }}, {{ settings.colors_dark_background.blue }};
          {% else %}
            --background-color: 32, 32, 32;
          {% endif %}
        {% else %}
          background: {{ section.settings.background_color_dark }};
          --background-color: {{ section.settings.background_color_dark.red }}, {{ section.settings.background_color_dark.green }}, {{ section.settings.background_color_dark.blue }};
        {% endif %}
      }
    {% endif %}
{%- endstyle -%}
{% if section.settings.show_content == 'image' %}
  {% if section.settings.image != blank %}
    {% assign classDivider1 = ' block md:otsb-hidden' %}
    {% assign classDivider2 = ' otsb-hidden md:block absolute left-0 w-full' %}
  {% endif %}
{% else %}
  {% assign classDivider2 = ' otsb-hidden' %}
{% endif %}
<div class="{{ classDivider1 }}">
  {% render 'otsb-section-divider', class: classDivider1 %}
</div>
{%- if section.settings.heading != blank
  and section.settings.show_contact_infomation
  or section.settings.heading != blank
-%}
  {%- style -%}
    .heading--{{ section.id }} { font-size: {{ heading_size | times: 0.6 }}rem; }
    @media screen and (min-width: 1025px) {
      .heading--{{ section.id }}{
        font-size: {{ heading_size }}rem;
      }
    }
  {%- endstyle -%}
{%- endif -%}
<div
  class="
    {% if check_content %}otsb-contact-has-{{ check_content }}{% if section.settings.full_width %} otsb-contact-full-width md:pl-0 md:pr-0{% else %} otsb-page-width{% endif %}{% else %} max-w-xl{% endif %}{% if section.settings.full_width_mobile %} otsb-full-width-mobile{% else %} pr-5 pl-5{% endif %}
    {%- if section.settings.show_content == 'image' and section.settings.image %} md:pt-0 md:pb-0{% else %} md:pt-[{{ section.settings.padding_top }}px] md:pb-[{{ section.settings.padding_bottom }}px]{% endif %} mx-auto pt-[{{ section.settings.padding_top_mobile }}px] pb-[{{ section.settings.padding_bottom_mobile }}px]
  "
>
  <div class="{% if is_rtl %}ltr {% endif %}contact-form-{{ section.id }} flex flex-col md:gap-y-0 md:flex-row w-full gap-y-7{% unless check_content %}{% if section.settings.form_alignment == "left" %} pb-7 lg:pb-0{% else %} pt-7 lg:pt-0{% endif %}{% endunless %}{% if section.settings.show_content == 'info' or section.settings.show_content == 'both' and section.settings.image == blank %} md:gap-x-[4%]{% endif %}{% unless section.settings.full_width_mobile %}{% if settings.edges_type == 'rounded_corners' %} rounded-[10px]{% endif %}{% endunless %}{% if section.settings.full_width %} md:rounded-none{% else %}{% if settings.edges_type == 'rounded_corners' %} md:rounded-[10px]{% endif %}{% endif %}">
    <div class="{{ classDivider2 }}">
      {% render 'otsb-section-divider', class: classDivider2 %}
    </div>
    <div class="{% if is_rtl %}otsb-rtl {% endif %}otsb-contact-form-container flex justify-center{% if section.settings.show_content == 'both' and section.settings.image %} flex-col items-center{% endif %}{% if section.settings.form_alignment == "left" %} pt-7 md:justify-end{% else %} pb-7 md:justify-start{% endif %}{% if section.settings.full_width_mobile %} pl-5 pr-5{% endif %} md:pl-5 md:pr-5 {{ class_form }}{% if section.settings.show_content == 'image' and section.settings.image %} md:pt-[{{ section.settings.padding_top }}px] md:pb-[{{ section.settings.padding_bottom }}px]{% else %} md:pb-7 md:pt-7{% endif %}">
      {% if section.settings.show_content == 'info' or section.settings.show_content == 'both' %}
        {% capture info_content %} 
            <div class="{% if is_rtl %}otsb-rtl {% endif %}otsb-contact-infomation {{ class_infomation }} {{ class_form_both }} flex justify-center md:pb-7 md:pt-7{% if section.settings.form_alignment == "left" %} pb-7 md:justify-end{% else %} pt-7 md:justify-start{% endif %}{% if section.settings.background_color_light.alpha != 0.0 %} pl-5 pr-5{% else %} lg:pl-0 lg:pr-0{% endif %}{% if section.settings.background_color_dark.alpha != 0.0 %} otsb-dark:pl-5 otsb-dark:pr-5{% else %} otsb-dark:pl-0 otsb-dark:pr-0 otsb-dark:lg:pl-0 otsb-dark:lg:pr-0{% endif %}{% if section.settings.full_width_mobile %} pl-5 pr-5{% endif %}">
              <div class="w-full {% if settings.page_width != blank %}max-w-[{{ settings.page_width | divided_by: 2 }}px]{% else %}max-w-[{{ 1400 | divided_by: 2 }}px]{% endif %}">
                <div class="otsb-form-heading">
                  {%- if section.settings.heading != blank -%}
                    <{{ section.settings.heading_tag_2 }} class="heading--{{ section.id }} otsb-h2 block mt-2 leading-tight">
                      {{ section.settings.contact_heading | escape }}
                    </{{ section.settings.heading_tag_2 }}>
                  {%- endif -%}
                  {% if section.settings.infomation != blank %}
                    <div class="otsb-rte mt-2 lg:mt-4">
                      {{ section.settings.infomation }}
                    </div>
                  {% endif %}
                </div>
                <ul class="flex gap-y-4 flex-col mt-8 pb-9">
                  {% if section.settings.address != blank %}
                    <li class="otsb-rte flex items-center gap-4">
                      <span class="w-5">{%- render 'otsb-icon-alls', icon: 'icon-location' -%}</span>
                      <span>{{ section.settings.address }}</span>
                    </li>
                  {% endif %}
                  {% if section.settings.phone_nummber != blank %}
                    <li class="otsb-rte flex items-center gap-4">
                      <span class="w-5">{%- render 'otsb-icon-alls', icon: 'icon-phone' -%}</span>
                      <span>{{ section.settings.phone_nummber }}</span>
                    </li>
                  {% endif %}
                  {% if section.settings.email_address != blank %}
                    <li class="flex items-center gap-4">
                      <span class="w-5">{%- render 'otsb-icon-alls', icon: 'icon-email' -%}</span>
                      <a class="otsb-nav-link otsb-hover-text-link relative" href="mailto:{{ section.settings.email_address }}">{{ section.settings.email_address }}</a>
                    </li>
                  {% endif %}
                </ul>
                {% if section.settings.contact_text != blank %}
                  <div class="pt-6 border-t otsb-rte">
                    {{ section.settings.contact_text }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endcapture %}
      {% endif %}
      {% if section.settings.show_content == 'both' and section.settings.image != blank %}
        {{ info_content }}
      {% endif %}
      <div class="{% if section.settings.show_content == 'both' and section.settings.image %}otsb-contact-form-both{% else %}otsb-contact-form{% endif %} w-full {% if settings.page_width != blank %}max-w-[{{ settings.page_width | divided_by: 2 }}px]{% else %}max-w-[{{ 1400 | divided_by: 2 }}px]{% endif %}">
        <div class="otsb-heading-form text-{{ section.settings.heading_alignment }}{% if section.settings.heading != blank or section.settings.text != blank %} mb-6 md:mb-8{%- endif -%}">
          {%- if section.settings.heading != blank -%}
            <{{ section.settings.heading_tag }} class="heading--{{ section.id }} otsb-h2 block mt-2 leading-tight">
              {{ section.settings.heading | escape }}
            </{{ section.settings.heading_tag }}>
          {%- endif -%}
          {% if section.settings.text != blank %}
            <div class="otsb-rte mt-2 lg:mt-4">
              {{ section.settings.text }}
            </div>
          {% endif %}
        </div>
        {%- form 'contact', id: formID, class: 'eurus' -%}
          {%- if form.posted_successfully? -%}
            <div
              class="flex items-center pl-4 pr-4 pt-3.5 pb-3.5 mb-3 bg-[rgba(var(--color-success),0.2)] selection:bg-[rgba(var(--color-success),0.4)] focus:outline-none"
              tabindex="-1"
              autofocus
            >
              <span class="text-[rgba(var(--color-success))] w-5 mr-2">
                {%- render 'otsb-icon-alls', icon: 'icon-success' %}
              </span>
              {%- if section.settings.success_message -%}
                <p class="leading-tight flex-1">{{ section.settings.success_message }}</p>
              {%- else -%}
                {{ 'templates.contact.form.post_success' | t }}
              {%- endif -%}
            </div>
          {%- elsif form.errors -%}
            <p
              class="flex items-center pl-4 pr-4 pt-3 pb-3 mb-3 bg-[rgba(var(--color-error),0.2)] selection:bg-[rgba(var(--color-error),0.4)]"
              tabindex="-1"
              autofocus
            >
              <span class="text-[rgba(var(--color-error))] inline-block w-5 mr-2">
                {%- render 'otsb-icon-alls', icon: 'icon-error' %}
              </span>
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </p>
          {%- endif -%}
          {%- unless form.posted_successfully? -%}
            <div class="otsb-contact__fields">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'name' -%}
                    <div class="mb-3 lg:mb-4 flex-1 relative" {{ block.shopify_attributes }}>
                      <input
                        type="text"
                        id="ContactFormName-{{ section.id }}"
                        class="w-full pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 border focus:outline-none focus:border-current otsb-input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                        name="contact[{%- if block.settings.heading != blank -%}{{ block.settings.heading }}{%- else -%}name{% endif %}]"
                        value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
                        autocapitalize="words"
                        placeholder="Name"
                        {% if block.settings.mark_as_required %}
                          required
                        {% endif %}
                      >
                      <label
                        class="duration-150 leading-tight absolute top-1/2{% if settings.lang_direction contains request.locale.iso_code %} right-5 lg:right-6{% else %} left-5 lg:left-6{% endif %} -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
                        for="ContactFormName-{{ section.id }}"
                      >
                        {{- block.settings.heading }}
                        {% if block.settings.mark_as_required %}
                          <span aria-hidden="true">*</span>
                        {%- endif %}
                      </label>
                    </div>
                  {%- when 'email' -%}
                    <div class="mb-3 lg:mb-4 flex-1 relative" {{ block.shopify_attributes }}>
                      <input
                        type="email"
                        id="ContactFormEmail-{{ section.id }}"
                        class="w-full border pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 focus:outline-none focus:border-current otsb-input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                        name="contact[email]"
                        autocomplete="email"
                        autocapitalize="off"
                        autocorrect="off"
                        value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                        placeholder="Email"
                        required
                      >
                      <label
                        class="duration-150 leading-tight absolute top-1/2{% if settings.lang_direction contains request.locale.iso_code %} right-5 lg:right-6{% else %} left-5 lg:left-6{% endif %} -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
                        for="ContactFormEmail-{{ section.id }}"
                      >
                        {{- block.settings.heading }}
                        <span aria-hidden="true">*</span>
                      </label>
                    </div>
                  {%- when 'phone' -%}
                    <div class="mb-3 lg:mb-4 relative" {{ block.shopify_attributes }}>
                      <input
                        type="tel"
                        id="ContactFormPhone-{{ section.id }}"
                        class="{% if is_rtl %}otsb-rtl {% endif %}border w-full pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 focus:outline-none focus:border-current otsb-input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                        name="contact[{%- if block.settings.heading != blank -%}{{ block.settings.heading }}{%- else -%}phone{% endif %}]"
                        pattern="[0-9\-]*"
                        value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                        placeholder="Email"
                        {% if block.settings.mark_as_required -%}
                          required
                        {%- endif -%}
                      >
                      <label
                        class="duration-150 absolute top-1/2{% if settings.lang_direction contains request.locale.iso_code %} right-5 lg:right-6{% else %} left-5 lg:left-6{% endif %} -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
                        for="ContactFormPhone-{{ section.id }}"
                      >
                        {{- block.settings.heading }}
                        {% if block.settings.mark_as_required %}
                          <span aria-hidden="true">*</span>
                        {%- endif -%}
                      </label>
                    </div>
                  {%- when 'message' -%}
                    <div class="mb-2 md:mb-3 relative" {{ block.shopify_attributes }}>
                      <textarea
                        id="ContactFormMessage-{{ section.id }}"
                        class="w-full pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 border focus:outline-none focus:border-current otsb-input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                        rows="4"
                        name="contact[{%- if block.settings.heading != blank -%}{{ block.settings.heading }}{%- else -%}message{% endif %}]"
                        placeholder="Email"
                        {% if block.settings.mark_as_required %}
                          required
                        {% endif -%}
                      >
                          {{- form.message -}}
                        </textarea>
                      <label
                        class="duration-150 absolute top-3 md:top-4{% if settings.lang_direction contains request.locale.iso_code %} right-5 lg:right-6{% else %} left-5 lg:left-6{% endif %} input_focus:text-xs input_focus:top-1 input_not_empty:top-1 input_not_empty:text-xs"
                        for="ContactFormMessage-{{ section.id }}"
                      >
                        {{- block.settings.heading }}
                        {% if block.settings.mark_as_required %}
                          <span aria-hidden="true">*</span>
                        {%- endif -%}
                      </label>
                    </div>
                  {%- when 'form' -%}
                    {% liquid
                      assign options = null
                      unless block.settings.type_field == 'text'
                        assign options = block.settings.options | append: '' | split: ';'
                      endunless
                      assign FormItem = 'FormItem-' | append: forloop.index
                      assign ContactForm = 'ContactForm-' | append: section.id | append: '-' | append: forloop.index
                    %}
                    <div class="mb-3 lg:mb-4 relative" {{ block.shopify_attributes }}>
                      {%- if block.settings.heading != blank or block.settings.mark_as_required -%}
                        <label
                          class="pb-2 pt-3 block{% if block.settings.type_field == 'dropdown' or block.settings.type_field == 'text' %} !hidden{% endif %}"
                          for="{{ ContactForm }}"
                        >
                          {{- block.settings.heading }}
                          {% if block.settings.mark_as_required %}
                            <span aria-hidden="true">*</span>
                          {%- endif %}
                        </label>
                      {%- endif -%}
                      {%- if block.settings.type_field == 'text' -%}
                        <input
                          type="text"
                          id="{{ ContactForm }}"
                          class="w-full pl-5 pr-5 lg:pl-6 lg:pr-6 pt-5 pb-1 md:pt-5 md:pb-2 border focus:outline-none focus:border-current otsb-input bg-transparent placeholder:opacity-0{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                          name="contact[{%- if block.settings.heading != blank -%}{{ block.settings.heading }}{%- else -%}{{ FormItem }}{% endif %}]"
                          value=""
                          placeholder="Email"
                          {% if block.settings.mark_as_required %}
                            required
                          {% endif %}
                        >
                        <label
                          class="duration-150 absolute top-1/2{% if settings.lang_direction contains request.locale.iso_code %} right-5 lg:right-6{% else %} left-5 lg:left-6{% endif %} -translate-y-1/2 input_focus:text-xs input_focus:top-3 input_not_empty:top-3 input_not_empty:text-xs"
                          for="{{ ContactForm }}"
                        >
                          {{- block.settings.heading }}
                          {% if block.settings.mark_as_required %}
                            <span aria-hidden="true">*</span>
                          {%- endif %}
                        </label>
                      {%- elsif options.size > 0 -%}
                        {%- if block.settings.type_field == 'dropdown' -%}
                          <div class="relative">
                            <select
                              id="{{ ContactForm }}"
                              class="otsb-select w-full pt-3 pb-3 pl-5 md:pt-4 md:pb-3.5 lg:pl-6 pr-8 rtl:pl-8 rtl:lg:pr-6 border focus:outline-none focus:border-current relative cursor-pointer bg-transparent{% if settings.edges_type == 'rounded_corners' %} !rounded-md{% endif %}"
                              name="contact[{%- if block.settings.heading != blank -%}{{ block.settings.heading }}{%- else -%}{{ FormItem }}{% endif %}]"
                              {% if block.settings.mark_as_required %}
                                required
                              {% endif %}
                            >
                              <option class="pt-2.5 pb-2.5 pl-2 pr-2 bg-[rgba(var(--background-color))]" value="">
                                {{- block.settings.heading }}
                                {% if block.settings.mark_as_required %}
                                  <span aria-hidden="true">*</span>
                                {%- endif %}
                              </option>
                              {%- for option in options -%}
                                <option
                                  class="pt-2.5 pb-2.5 pl-2 pr-10 whitespace-normal cursor-pointer bg-[rgba(var(--background-color))]"
                                  value="{{ option }}"
                                >
                                  {{- option -}}
                                </option>
                              {%- endfor -%}
                            </select>
                            <span class="absolute top-1/2 -translate-y-1/2 w-2.5 right-4 rtl:left-4 rtl:right-auto cursor-pointer pointer-events-none">
                              {%- render 'otsb-icon-alls', icon: 'icon-caret' -%}
                            </span>
                          </div>
                        {%- elsif block.settings.type_field == 'radio' -%}
                          <div class="otsb-grid md:grid-cols-2 gap-x-7">
                            {%- for option in options -%}
                              {%- style -%}
                                .otsb-radio-checked {
                                  --colors-text-link: {{ section.settings.color_text_link.red }}, {{ section.settings.color_text_link.green }}, {{ section.settings.color_text_link.blue }};
                                }
                              {%- endstyle -%}
                              <div class="flex items-center mt-1.5 mb-1.5 cursor-pointer">
                                <input
                                  type="radio"
                                  id="{{ ContactForm }}-{{ forloop.index }}"
                                  name="contact[{%- if block.settings.heading != blank -%}{{ block.settings.heading }}{%- else -%}{{ FormItem }}{% endif %}]"
                                  value="{{ option }}"
                                  class="otsb-radio-checked relative h-[16px] w-[16px] mr-2 rtl:mr-0 rtl:ml-2 border focus:outline-none rounded-full cursor-pointer"
                                  {% if block.settings.mark_as_required -%}
                                    required
                                  {%- endif %}
                                  {% if forloop.index == 1 %}
                                    checked
                                  {% endif -%}
                                >
                                <label
                                  for="{{ ContactForm }}-{{ forloop.index }}"
                                  class="flex-1 cursor-pointer bg-transparent"
                                >
                                  {{ option }}
                                </label>
                                <br>
                              </div>
                            {%- endfor -%}
                          </div>
                        {%- elsif block.settings.type_field == 'checkbox' -%}
                          <div
                            x-data="
                              {
                                data: [],
                                checkEmpty() {
                                  const element = this.$el.closest('.otsb-multi-select').querySelector('.otsb-content').value;
                                  const checkboxes = this.$el.closest('.otsb-multi-select').querySelectorAll('.otsb-checkbox');
                                  if (!element) {
                                    for (let i = 0; i < checkboxes.length; i++) {
                                      checkboxes[i].setAttribute('required', '');
                                    }
                                  } else {
                                    for (let i = 0; i < checkboxes.length; i++) {
                                      checkboxes[i].removeAttribute('required');
                                    }
                                  }
                                }
                              }
                            "
                            class="otsb-multi-select otsb-grid md:grid-cols-2 gap-x-7"
                          >
                            {%- for option in options -%}
                              {%- style -%}
                                .otsb-checkbox {
                                  --colors-text-link: {{ section.settings.color_text_link.red }}, {{ section.settings.color_text_link.green }}, {{ section.settings.color_text_link.blue }};
                                }
                              {%- endstyle -%}
