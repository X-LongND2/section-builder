          },
          {
            "type": "color",
            "id": "secondary_button_text_light",
            "label": "Secondary button text color",
            "default": "#000000"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "OT - Map #3",
        "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "richtext"
          },
          {
            "type": "button"
          }
        ]
      }
    ]
