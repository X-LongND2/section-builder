      },
      {
        "type": "color",
        "id": "bg_color_map",
        "default": "rgba(0,0,0,0)",
        "label": "Background color"
      },
      {
        "type": "color",
        "id": "text_color_map",
        "default": "rgba(0,0,0,0)",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "heading_color",
        "default": "rgba(0,0,0,0)",
        "label": "Heading and title color"
      },
      {
        "type": "header",
        "content": "Desktop layout"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "default": false,
        "label": "Make section full width"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top padding",
        "default": 28
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom padding",
        "default": 28
      },
      {
        "type": "header",
        "content": "Mobile layout"
      },
      {
        "type": "checkbox",
        "id": "full_width_mobile",
        "default": false,
        "label": "Make section full width"
      },
      {
        "type": "range",
        "id": "padding_top_mobile",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
