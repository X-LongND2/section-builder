      },
      {
        "type": "range",
        "id": "padding_bottom_mobile",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom padding",
        "default": 20
      }
    ],
    "blocks": [
      {
        "type": "heading",
        "name": "Store name",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "Store name",
            "label": "Heading"
          },
          {
